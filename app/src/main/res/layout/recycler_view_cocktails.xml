<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="cocktail"
            type="com.example.cocktail.model.Cocktail" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            android:layout_margin="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                >
                <ImageView
                    app:image="@{cocktail.strDrinkThumb}"
                    android:id="@+id/cocktails_image"
                    android:layout_width="100dp"
                    android:scaleType="centerCrop"
                    android:layout_height="100dp"
                    />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:padding="12dp">

                    <TextView
                        android:id="@+id/cocktails_title"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:text="@{cocktail.strDrink}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:id="@+id/cocktails_category"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:text="@{cocktail.strCategory}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/cocktails_instruction"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:text="@{cocktail.strInstructions}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:maxLength="64"
                        android:ellipsize="end"/>
                </LinearLayout>
            </LinearLayout>
            
        </androidx.cardview.widget.CardView>
        
    </LinearLayout>
    
</layout>